{
  "name": "pollster",
  "version": "0.1.0",
  "description": "Voting App Back-End Project for FreeCodeCamp",
  "private": true,
  "scripts": {
    "start": "concurrently 'npm run server' 'npm run client' 'npm run scss-watch'",
    "client": "cd client && npm start",
    "server": "nodemon app.js",
    "scss-watch": "cd client/src && scss --watch index.scss:index.css",
    "build": "cd client && npm run build",
    "deploy": "npm run build && git add . && git commit -m 'Heroku Deployment' && git push origin master && git push heroku master && heroku open"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "concurrently": "^3.4.0",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.0",
    "dotenv": "^4.0.0",
    "express": "~4.15.2",
    "express-session": "^1.15.1",
    "mongoose": "^4.9.1",
    "morgan": "~1.8.1",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-github2": "^0.1.10",
    "passport-google-oauth20": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "serve-favicon": "^2.4.2"
  }
}
